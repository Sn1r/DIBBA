<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/explanationTextBroadcast"
        android:layout_width="370dp"
        android:layout_height="121dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="16dp"
        android:text="Broadcast receivers listen for system-wide events or custom broadcasts. When an event occurs, the receiver triggers a designated action.\nBroadcast receivers that are not properly secured can be exploited by malicious actors to send unauthorized broadcasts, which can trigger unintended actions in the receiver."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <EditText
        android:id="@+id/txtMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Enter your message"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClickShowBroadcast"
        android:text="Show Broadcast"/>
</LinearLayout>
